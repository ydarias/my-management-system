{
  "name": "my-management-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "24.1.0",
    "prettier": "3.8.1",
    "turbo": "2.8.8",
    "typescript": "5.9.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=24.0.0"
  }
}
